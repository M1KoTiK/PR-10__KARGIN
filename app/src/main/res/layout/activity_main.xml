<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8C091"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/rectangle_1" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:translationX="-120dp"
            android:translationY="-65dp"
            app:srcCompat="@drawable/vector" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/screen1_name"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:translationX="140dp"
            android:translationY="-100dp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:translationY="-50dp"
            app:srcCompat="@drawable/rectangle_9" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:translationX="-140dp"
            android:translationY="-110dp"
            app:srcCompat="@drawable/vector_1_" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rastoyanie"
            android:textColor="#000000"
            android:textStyle="bold"
            android:translationX="320dp"
            android:translationY="-135dp" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:translationY="-80dp"
            app:srcCompat="@drawable/rectangle_9" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:translationX="-140dp"
            android:translationY="-140dp"
            app:srcCompat="@drawable/vector_2_" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" 59 Kcal"
            android:textColor="#000000"
            android:textStyle="bold"
            android:translationX="320dp"
            android:translationY="-170dp" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:translationY="-110dp"
            app:srcCompat="@drawable/rectangle_9" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:translationX="-140dp"
            android:translationY="-170dp"
            app:srcCompat="@drawable/vector_3_" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="30 MIN"
            android:textColor="#000000"
            android:textStyle="bold"
            android:translationX="320dp"
            android:translationY="-195dp" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:translationY="-140dp"
            app:srcCompat="@drawable/rectangle_9" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1583 STEPS"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold"
            android:translationX="310dp"
            android:translationY="-185dp" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="450dp"
            android:layout_height="47dp"
            android:translationX="-160dp"
            android:translationY="-220dp"
            app:srcCompat="@drawable/vector_4_" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="778dp">

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="292dp"
            android:layout_height="113dp"
            android:translationX="-60dp"
            android:translationY="600dp"
            app:srcCompat="@drawable/rectangle_3" />
        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="292dp"
            android:layout_height="113dp"
            android:translationX="-110dp"
            android:translationY="600dp"
            app:srcCompat="@drawable/rectangle_3" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>